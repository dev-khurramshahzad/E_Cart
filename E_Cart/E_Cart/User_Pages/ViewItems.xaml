<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_Cart.User_Pages.ViewItems" >
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="24">
                <ListView x:Name="DataList" ItemTapped="DataList_ItemTapped" HasUnevenRows="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell >
                                <StackLayout>
                                    <Grid>
                                        
                                        <Image Source="mobile.jpg"/>
                                        
                                       

                                    </Grid>
                                </StackLayout>
                            </ViewCell>

                            <!--<ImageCell Text="{Binding CatName}" Detail="{ Binding CatDetail}" ImageSource="{Binding CatImage}"/>-->

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>